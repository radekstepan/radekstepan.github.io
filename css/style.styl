@font-face
  font-family: 'Lato'
  font-style: normal
  font-weight: 100
  src: local('Lato Hairline'), local('Lato-Hairline'), url('../font/Lato-Hairline.woff') format('woff')

@font-face
  font-family: 'Lato'
  font-style: normal
  font-weight: 400
  src: local('Lato Regular'), local('Lato-Regular'), url('../font/Lato-Regular.woff') format('woff')

@font-face
  font-family: 'Lato'
  font-style: normal
  font-weight: 700
  src: local('Lato Bold'), local('Lato-Bold'), url('../font/Lato-Bold.woff') format('woff')

@font-face
    font-family: 'Lato'
    font-style: normal
    font-weight: 900
    src: local('Lato Black'), local('Lato-Black'), url('../font/Lato-Black.woff') format('woff')

html height: 100% font-size: 100%

*,
*:after,
*:before
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box
    padding: 0
    margin: 0

.clearfix
    *zoom: 1

    &:before, &:after
        content: " "
        display: table
    &:after
        clear: both

body
    font-family: 'Lato', Calibri, Arial, sans-serif
    background: #f9f9f9
    font-weight: 400
    font-size: 1em
    color: #333
    overflow: scroll
    overflow-x: hidden

a
    cursor: pointer
    color: #555
    text-decoration: none

.main
    width: 90%
    max-width: 76em
    margin: 0 auto
    padding: 0 1.875em 3.125em 1.875em

.container
    width: 100%
    position: relative

    > header
        width: 90%
        max-width: 76em
        margin: 0 auto
        padding: 1.875em


        h1
            font-size: 2.125em
            line-height: 1.3
            margin: 0
            font-weight: 700
            color: #333
            float: left

            span
                display: block
                font-size: 65%
                font-weight: 300

.codrops-top
    line-height: 2.5
    font-size: 0.688em
    background: #fff
    background: rgba(255, 255, 255, 0.5)
    text-transform: uppercase
    z-index: 9999
    position: relative
    box-shadow: 1px 0px 2px rgba(0,0,0,0.2)

    a
        padding: 0 1em
        letter-spacing: 0.1em
        color: #333
        display: inline-block


        &:hover
            background: rgba(255,255,255,0.8)
            color: #000

    span.right
        float: right

        a
            float: left
            display: block

.codrops-demos
    float: right
    padding-top: 0.625em

    a
        display: inline-block
        margin: 0.625em
        color: #666
        font-weight: 700
        font-size: 90%
        line-height: 2
        border-bottom: 4px solid transparent


        &:hover
            color: #000
            border-color: #000


        &.current-demo, &.current-demo:hover
            color: #aaa
            border-color: #aaa


.support-note
    clear: both
    
    span
        color: #ac375d
        display: none
        font-weight: bold
        text-align: center
        padding: 0.313em 0

.rb-grid
    list-style: none
    text-align: center
    margin: 0 auto

    li
        width: 24%
        height: 15em
        margin: 0.5%
        background: #8CC7DF
        color: #fff
        display: block
        float: left
        padding: 1.6em
        cursor: pointer
        position: relative

        &.rb-span-2
            width: 49%

        &.rb-span-4
            width: 99%

        h3
            font-size: 2.6em
            font-weight: 100

        &[class^="icon-"]:before, &[class*=" icon-"]:before
            font-size: 10em
            position: absolute
            display: block
            width: 100%
            height: 100%
            top: 0
            left: 0
            line-height: 3
            opacity: 0.4
            text-align: right
            pointer-events: none
        &:hover .rb-temp
            opacity: 1

        &:nth-child(1)
            background: #3399CC
        &:nth-child(2)
            background: #33CCCC
        &:nth-child(3)
            background: #996699
        &:nth-child(4)
            background: #C24747
        &:nth-child(5)
            background: #e2674a
        &:nth-child(6)
            background: #FFCC66
        &:nth-child(7)
            background: #99CC99
        &:nth-child(8)
            background: #669999
        &:nth-child(9)
            background: #CC6699
        &:nth-child(10)
            background: #339966
        &:nth-child(11)
            background: #666699

.rb-temp
    display: block
    font-size: 2em
    opacity: 0.5
    -webkit-transition: opacity 0.3s ease-in-out
    -moz-transition: opacity 0.3s ease-in-out
    transition: opacity 0.3s ease-in-out

.rb-overlay
    opacity: 0
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #444
    -webkit-transition: opacity 0.4s ease, -webkit-transform 0.4s ease, clip 0.4s ease
    -moz-transition: opacity 0.4s ease, -moz-transform 0.4s ease, clip 0.4s ease
    transition: opacity 0.4s ease, transform 0.4s ease, clip 0.4s ease
    z-index: -1
    pointer-events: none
    cursor: default

.rb-close
    position: absolute
    top: 0.4em
    right: 0.4em
    width: 2em
    height: 2em
    text-indent: -9000px
    cursor: pointer
    z-index: 1000

    &::before
        content: 'x'
        font-weight: 100
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        font-size: 3em
        line-height: 0.6
        text-align: center
        text-indent: 0px

.rb-week
    width: 100%
    height: 100%

    > div
        width: 10%
        height: 100%
        float: left
        position: relative
        padding: 3% 0

        &:first-child
            width: 30%

            [class^="icon-"]
                opacity: 0.1

    span
        padding: 5% 0
        font-size: 2em
        font-weight: 100
        display: block
        margin: auto 0
        height: 30%
        width: 100%
        line-height: 0.8

        &.rb-city
            font-weight: 700
            padding: 1% 10%
            font-size: 1em
            line-height: 1.2

    [class^="icon-"]:before
        font-size: 2.5em
        font-weight: normal

