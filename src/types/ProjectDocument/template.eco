<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <title><%= @title %> - Work of Radek Stepan</title>

        <link rel="stylesheet" type="text/css" href="/site/css/style.css" />
    </head>
    <!-- fix the style to the default variant -->
    <body class="<%= @style %> style variant-0">
        <div class="rb-content">
            <div class="wrap">
                <h3><%= @title %></h3>

                <% if @github: %>
                    <a href="<%= @github %>" target="_new" class="github"><%= @github %></a>
                <% end %>

                <!-- no image as we have no scrollbar here -->
                <div><%- @body %></div>
            </div>
        </div>
    </body>
</html>
