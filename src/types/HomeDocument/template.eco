<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <title>Work of Radek Stepan</title>

        <link rel="stylesheet" type="text/css" href="/site/css/style.css" />
        
        <script src="/site/js/vendor/modernizr.custom.js"></script>
        <script src="/site/js/vendor/jquery.js"></script>
        <script src="/site/js/vendor/jquery.mousewheel.js"></script>
        <script src="/site/js/vendor/jquery.jscrollpane.js"></script>
        <script src="/site/js/vendor/jquery.fittext.js"></script>
        
        <script src="/site/js/template.js"></script>
        <script src="/site/js/app.js"></script>
        <script>
            $(function() {
                app = new App();
                app.initialize();
            });
        </script>
    </head>
    <body>
        <div class="container"> 
            <div id="top" class="notgrid clearfix">
                <span class="right">
                    <a href="https://github.com/radekstepan" class="github" target="_blank">GitHub</a>
                    <a href="http://www.behance.net/r4d3k" class="behance" target="_blank">Behance</a>
                    <a href="http://uk.linkedin.com/in/r4dek/" class="linkedin" target="_blank">LinkedIn</a>
                    <script>
                        document.write("<n uers='znvygb:<%= @email %>'><%= @email %></n>".replace(/[a-zA-Z]/g,
                            function(c){return String.fromCharCode((c<="Z"?90:122)>=(c=c.charCodeAt(0)+13)?c:c-26);}));
                    </script>
                </span>
            </div>
            
            <header id="header" class="notgrid clearfix">
                <h1>Work of Radek Stepan <span><%= @subtitle %></span></h1>  
                <nav id="categories">
                    <a data-category="all" class="current">All</a>
                    <a data-category="js">JavaScript/Node.js</a>
                    <a data-category="html">HTML/CSS</a>
                    <a data-category="prolog">Prolog</a>
                    <a data-category="python">Python</a>
                    <a data-category="php">PHP</a>
                </nav>
            </header>
            
            <div id="main">
                <div class="main-scroll-pane">
                    <ul id="rb-grid" class="rb-grid clearfix">
                        <% for p in @projects: %>
                            <li
                                class="entypo-<%= p.icon or 'none' %> span-<%= p.width %> <%= p.style %> style variant-<%= Math.floor(Math.random() * 5) %>"
                                data-category="<%= p.categories.join(',') %>">
                                <a class="link" href="<%= p.url %>">
                                    <span class="title size-<%= Math.floor(p.title.length/5) %>"><%= p.title %></span>
                                    <span class="subtitle"><%= p.description %></span>
                                    <div class="rb-overlay"><!-- dynamically populate --></div>
                                </a>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>
